<div class="main-container">
  <div class="row">
    <div class="col-12 col-md-8 col-lg-6 chat-container p-0 ">
      <h4 class="pt-3 w-100 text-center chat-title bg-white">Chat with <%= @chatroom.name %></h4>
      <div id="messages" class="receiver chat-messages" data-chatroom-id="<%= @chatroom.id %>" data-current-user-id="<%= current_user.id %>">
        <% @chatroom.messages.each do |message| %>
          <%= render "messages/message", message: message %>
        <% end %>
      </div>
      <div class="chat-form col-12">
        <%= simple_form_for [ @chatroom, @message ], remote: true do |f| %>
          <%= f.input :content, as: :text, label: false, placeholder: "Message #{@chatroom.name}", class: "border" %>
          <button type="submit">
            <i class="fas fa-chevron-circle-right"></i>
          </button>
        <% end %>
      </div>
    </div>
  </div>
</div>
