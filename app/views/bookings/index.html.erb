<div class="container">
  <div class="card-box w-75 m-auto">
      <div class="d-flex flex-wrap justify-content-center">
        <% @bookings.each do |booking| %>
          <div class="card-product col-12 p-0 w-75 m-3">
            <%= show_buddy_photo(booking.buddy) %>
            <div class="card-product-info w-100 px-2 m-2">
              <%= link_to booking.buddy.name, buddy_path(booking.buddy), class: 'h5 text-primary' %>
              <p class="text-secondary">Booked from <%= booking.start_date %> - <%= booking.end_date %></p>
              <div class="price">
                <p><%= booking.buddy.price_cents %>â‚¬</p>
              </div>
              <p><%= booking.status %></p>
              <div class="d-flex justify-content-start">
                <% if booking.status != "Accepted!" %>
                  <%= link_to  "Accept Booking", accepted_path(booking.id), method: :get, data: { confirm: "Are you sure?" }, class: "btn btn-flat mr-2" %>
                <% end %>
                <%= link_to  "Reject Booking", booking_path(booking.id, booking.buddy.id), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-flat mr-2" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
</div>