<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <% @buddy.photos.each_with_index do |photo, index| %>
      <div class="carousel-item <%= 'active' if index == 0 %> ">
        <div style="background-image: url(<%= cl_image_path photo.key %>)" class="d-block carousel-image">
        </div>
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="main-booking-container">
  <div class="show-body row d-flex justify-content-between mt-5">
    <div class="description-box col-12 col-lg-5" id="round-border">
      <h2><strong><%= @buddy.name %></strong> </h2>
      <h6 class="border-bottom rounded text-secondary" style="line-height: 25px;"> <%=@buddy.description  %> </h6>
      <h5 class="pt-1 pb-2"><strong>My specialities: </strong></h5>
      <% @buddy.tags.each do |tag| %>
        <div class="mb-4">
          <h6><span class="badge badge-secondary mr-1"><%= tag %></span></h6>
          <p class="text-secondary"><%= display_tag(tag)  %></p>
        </div>
      <% end %>
        <p><%= link_to 'Contact buddy', chatroom_path(@chatroom) %></p>
    </div>
    <div class="col-12 col-lg-5" id="booking-round">
      <div class="border bg-white m-0 text-center">
       <h1 class="pt-3"><%=  @buddy.price_cents %> â‚¬</h1>
        <div class="card-header">
          Available
        </div>
        <div class="card-body">
         <div class="form-inputs">
           <%= simple_form_for [@buddy, @booking] do |f| %>
              <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
              <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
         </div>
         <div class="form-actions">
               <%= f.button :submit, class: "btn btn-flat" %>
        </div> 
        <% end %>
        </div>
      </div>
    </div>
    <div id="map" style="width: 100%; height: 300px;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>" class="col-12">
    </div>
  </div>
</div>
<div class="container">
 <div id="reviews" class="mt-5 col-12 col-lg-5">
    <h3>Reviews</h3>
    <% if @buddy.reviews.blank? %>
      Be the first to leave a review for <%= @buddy.name %>
    <% else %>
      <%= pluralize @buddy.reviews.size, "review" %>
      <% @buddy.reviews.each do |review| %>
        <div class="card bg-light text-dark mb-2 pl-2 py-2 w-100 rounded">
          <p class="mb-1"><strong><%= review.content %></strong></p>
          <div class="d-flex justify-content-between align-items-end">
            <div>
              <p class="mb-1 rounded">
                <% review.rating.times do %>
                  <i class="fas fa-star text-primary"></i>
                <% end %>
              </p>
            </div>
            <div>
              <p class="mr-2 mb-0">- <%= review.user.email %></p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
    <%= simple_form_for([ @buddy, @review ]) do |f| %>
      <%= f.input :content, as: :text %>
      <%= f.input :rating, collection: 1..5 %>
      <%= f.button :submit, class:"btn btn-primary mb-3" %>
    <% end %>
  </div>
   <%= link_to "< Go back to results" , buddies_path %>
 </div>
