<%# Main container  %>
<div class="container">
<%# row 12 columns to show the carrousse or main picture of the buddy%>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">

    <% @buddy.photos.each_with_index do |photo, index| %>
      <div class="carousel-item <%= 'active' if index == 0 %> ">
        <div style="background-image: url(<%= cl_image_path photo.key %>)" class="d-block w-100 carousel-image">

        </div>
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

  <%# Main row for the description and the booking method %>

  <div class="show-body d-flex justify-content-between mt-5">
    <div class="description-box" id="round-border">
        <h2><strong><%= @buddy.name %></strong> </h2>
        <h6 class="border-bottom rounded text-secondary" style="line-height: 25px;"> <%=@buddy.description  %> </h6>
        <h5 class="pt-1 pb-2"><strong>My specialities: </strong></h5>
        <% @buddy.tags.each do |tag| %>
        <div class="mb-4">
          <h6><%= tag %></h6>
          <p class="text-secondary"><%= display_tag(tag)  %></p>
        </div>
        <% end %>

    </div>
    <div class="booking-box" id="booking-round">
      <div class="card text-center">
       <h1 class="pt-3"><%=  @buddy.price_cents %> â‚¬</h1>
        <div class="card-header">
          Available
        </div>
        <div class="card-body">
         <div class="form-inputs">
           <%= simple_form_for [@buddy, @booking] do |f| %>
              <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
              <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
         </div>
         <div class="form-actions">
               <%= f.button :submit, class: "btn btn-flat" %>
        </div> 
        <% end %>
        </div>
        <div class="card-footer text-muted">
          Buffer is here for you
        </div>
      </div>
    </div>
  </div>

  <div class="pt-3">
    <%= link_to "< Go back to results" , buddies_path %>
  </div>

  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
     
</div>
