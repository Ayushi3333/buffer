<div class="container">
  <div class="w-75 m-auto d-flex justify-content-center py-5">
       <div class="d-flex">
        <%= form_tag(buddies_path, method: :get, class: 'd-flex') do %>
          <%= text_field_tag(:search, params[:search], class: 'form-control') %>
          <%= submit_tag ("Search"), class: "btn btn-outline-primary" %>
        <% end %>
      </div>
  </div>
  <div class="row d-flex justify-content-around">
  <% @buddies.each do |buddy| %>
    <div class="card-product col-sm-12 col-md-5 col-lg-3 m-2 p-0">
      <%= show_buddy_photo(buddy) %>
      <div class="card-product-infos">
        <%= link_to buddy.name, 'buddy_path', class: 'h5 text-secondary' %>
        <p><%= buddy.description %></p>
        
        <div class="d-flex justify-content-start flex-wrap">
          <% buddy.tags.each do |tag| %>
            <h6><span class="badge badge-secondary mx-1"><%= tag %></span></h6>
          <% end %>
        </div>
        
      </div>
    </div>
  <% end %>
  </div>
</div>