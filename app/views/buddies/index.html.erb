
<div class="container-fluid">
  <div class="col-12 my-5">
    <h2>List of buddies</h2>
  </div>
  <div class="w-75 m-auto d-flex justify-content-center py-5">
       <div class="d-flex">
        <%= form_tag(buddies_path, method: :get, class: 'd-flex') do %>
          <%= text_field_tag(:search, params[:search], class: 'form-control') %>
          <%= submit_tag ("Search"), class: "btn btn-outline-primary" %>
        <% end %>
      </div>
  </div>

  <div class="row d-flex justify-content-around">
    <div class="w-50 d-flex justify-content-around">
      <% @buddies.each do |buddy| %>
        <div class="card-product col-lg-6 m-3 p-0">
          <%= show_buddy_photo(buddy) %>
          <div class="card-product-info">
            <%= link_to buddy.name, buddy_path(buddy), class: 'h5 text-secondary' %>
            <p><%= buddy.description %></p>
            <p><%= buddy.price_cents %>â‚¬</p>
            <div class="d-flex justify-content-start flex-wrap align-items-end">
              <% buddy.tags.each do |tag| %>
                <h6><span class="badge badge-secondary mx-1"><%= tag %></span></h6>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  
    <div class="map">
      <img class="rounded" src="https://www.google.com/maps/d/thumbnail?mid=1zG0EOdNTSZrETHd6pAm5SP0s8wY&hl=en" alt="">
    </div>
  </div>
</div>