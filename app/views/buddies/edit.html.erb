<div class="container">
  <h2 class="text-center my-5">Become a buddy</h2>
  <div class="row d-flex justify-content-center my-5">

    <div class="col-8">
        <div class="w-50 m-auto">
          <%= simple_form_for(@buddy, remote: true) do |f| %>
            <%= f.input :name, as: :string %>
            <%= f.input :description, as: :text %>
            <%= f.input :address, as: :string %>
            <%= f.input :price_cents,as: :integer, label: "Rate" %>
            <%= f.input :photos, as: :file, input_html: { multiple: true } %>
            <%= f.input :tags, as: :check_boxes, input_html: { multiple: true, class: "tag-selector" }, item_wrapper_class: 'tag-item', collection: ["Diplomatic", 'Shredded', 'Possessive', 'Motherly', 'Comforting', 'Tough love', 'Social', 'Memory', 'Designated driver', 'Wing Man' ]%>
            <%= f.submit 'Edit your Buddy', class: 'btn btn-flat' %>
          <% end %>
        </div>
    </div>

  </div>
</div>
